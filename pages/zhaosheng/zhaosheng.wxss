#wrap {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.banner .banner_image {
	width: 100%;
	height: 100%;
}
.audio{
  margin-top: 60rpx;
  text-align: center;
}
.schoollist{
  margin-top: 60rpx;
}
.school-list-info{
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  position: relative;
}

.school-list-photo{
  width: 160rpx;
  height: 160rpx;
}
.school-list-desc{
  display: block;
  background-color: #000;
  color: #fff;
  position: absolute;
  bottom: 4%;
  left: 0;
  width: 87%;
  text-align: center;
  font-size: 25rpx;
  padding: 10rpx;
  opacity: 0.7;
}
.footer{
  position: absolute;
  margin-top: 60%;
  margin-left: 20rpx;
}
.contact{
  font-size: 30rpx;
}
